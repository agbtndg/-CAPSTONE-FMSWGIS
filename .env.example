# ============================================
# SILAY DRRMO - ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Django Secret Key (Generate a new one for production)
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Debug Mode (Set to False in production)
DEBUG=True

# Allowed Hosts (Comma-separated, e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=silaydrrmo_db
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# API Keys
WORLDTIDES_API_KEY=your-worldtides-api-key-here

# Admin Registration Key (Change this!)
ADMIN_REGISTRATION_KEY=silay-drrmo-admin-2025

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
